<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="10dp"
    card_view:cardBackgroundColor="#FFFFFF"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/navnFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:paddingStart="10dp"
            android:textSize="28dp"
            android:text="Bedrift" />
    
        <TextView
            android:id="@+id/karakterFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:textSize="28dp"
            android:text="Karakter: 2" />
    
        <TextView
            android:id="@+id/orgNrFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/navnFelt"
            android:paddingStart="10dp"
    
            android:text="TextView" />
    
        <TextView
            android:id="@+id/postNrFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navnFelt"
            android:layout_toEndOf="@+id/orgNrFelt"
            android:paddingStart="10dp"
            android:text="TextView" />
    
        <TextView
            android:id="@+id/poststedFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navnFelt"
            android:layout_toEndOf="@+id/postNrFelt"
            android:paddingStart="10dp"
    
            android:text="TextView" />
    
    
    </RelativeLayout>

</androidx.cardview.widget.CardView>