<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    card_view:cardElevation="10dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/text_padding"
        android:background="@color/background">

        <TextView
            android:id="@+id/navnFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:paddingStart="10dp"
            android:text="Bedrift"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/karakterFelt"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:paddingEnd="10dp"
            android:textSize="14sp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/orgNrFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navnFelt"
            android:layout_alignParentStart="true"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/text_padding"

            android:text="TextView" />

        <TextView
            android:id="@+id/postNrFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navnFelt"
            android:layout_toEndOf="@+id/orgNrFelt"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/text_padding"
            android:text="TextView" />

        <TextView
            android:id="@+id/poststedFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/navnFelt"
            android:layout_toEndOf="@+id/postNrFelt"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/text_padding"

            android:text="TextView" />

        <TextView
            android:id="@+id/datoFelt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/poststedFelt"
            android:text="TextView" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>